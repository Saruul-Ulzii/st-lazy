{
  "name": "st-lazy",
  "version": "0.8.1",
  "description": "@Lazy decorator for Stencil to call annotated method when component is scrolled to viewport. Contains also usefull Stencil components for lazy loading that use @Lazy",
  "module": "dist/esm/index.js",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "unpkg": "dist/index.js",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "npm install && stencil build --es5 --docs",
    "start": "stencil build --watch --serve",
    "dev": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll"
  },
  "dependencies": {},
  "devDependencies": {
    "@stencil/core": "^0.18.0"
  },
  "engines": {
    "node": "9.8.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jarrvis/st-lazy"
  },
  "keywords": [
    "Stencil",
    "decrator",
    "Web components",
    "scroll",
    "lazy loading",
    "IntersectionObserver",
    "st-img"
  ],
  "author": "Micha≈Ç Kaliszewski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jarrvis/st-lazy"
  },
  "homepage": "https://github.com/jarrvis/st-lazy"
}
